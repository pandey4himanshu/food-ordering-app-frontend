{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2023"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "isolatedModules": true,
    "moduleDetection": "force",
    "noEmit": false,  // Keep this as false
    
    /* Allow importing .ts extensions */
    "emitDeclarationOnly": true,  // Add this line if you want to emit only declarations
    // "allowImportingTsExtensions": true, // Comment or remove this line if needed

    /* Enable composite */
    "composite": true,  // Keep this line

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": ["vite.config.ts"]
}
